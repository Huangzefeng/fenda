.swiper-tab{ 
  padding: 10px 0px;
  height: 30px; 
  line-height: 30px; 
  background: #FFF; 
  display: flex; 
  position: relative; 
  z-index: 2; 
  flex-direction:row; 
  justify-content:center; 
  align-items:center;
}
.swiper-tab-list{ 
  color: #f85f48;
  text-align: center;
  border: 1px solid #f85f48;
  margin: 10px 0px;  
  padding: 0 6px;
  width: 60px; 
  font-size: 28rpx; 
  font-family: Helvetica, Arial, "Hiragino Sans GB", "Source Han Sans CN", "PingFang SC", Roboto, "微软雅黑", "Heiti SC", "Microsoft Yahei", sans-serif 
}
.swiper-left{
  border-radius: .3rem 0 0 .3rem;
}

.swiper-right{
  border-radius: 0 .3rem .3rem 0;
}
.on{
  color: #fff; 
  background: #f85f48;
}

#banner{
  background: #f5f5f5;
  text-align: center;
}
.banner{
  width:100%;
  height:7.25rem;
}

.question{
    background: #fff;
    padding: .3rem .45rem;
    margin: .3rem;
}
.question-content{
  color: #3f3f3f;
  font-size: .8rem;
}
.question-respondent{
    display: inline-block;
    width: 100%;
    color: #999;
    font-size: .65rem;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;

}

.question-answer{
  margin-top: .3rem;
}

.avatar{
  position:relative;width:1.85rem;height:1.85rem;border-radius:50%;display:inline-block;vertical-align:middle;margin-right:.675rem;
}
.avatarImg{
  position:relative;width:1.85rem;height:1.85rem;border-radius:50%;display:inline-block;
}

.voice{
  display:inline-block;
}
.bubble{
    float: none;
    display: block;
    background: #1ccda6;
    line-height: 2.2rem;
    height: 2.2rem;
    border-radius: 1.1rem;
    text-align: center;
    min-width: 9rem;
    color: #fff;
    font-size: .8rem;
    text-decoration: none;
    position: relative;
    margin-right: .35rem;

}

.bubble-blue {
    background: #28aef5;
}

.bubble-tail {
    width: .83rem;
    height: 1.185rem;
    position: absolute;
    bottom: 0;
    left: -.3rem;
    background-image: url('/images/bubble-tail.png');
    background-size: .83rem 1.185rem;
}

.wave3 {
    display: block;
    position: absolute;
    width: .8rem;
    height: .8rem;
    background-image: url('/images/bubble-wav3.png');
    background-size: .8rem;
    top: .65rem;
    left: .65rem;
}

/*悬赏*/

.rewards-header {
    overflow: hidden;
    background: #fff;
    border-bottom: 1px solid #e5e5e5;
    padding: .75rem;
    padding-bottom: 0;
    text-align: center;
}
.reward-btn {
    display: inline-block;
    margin: .2rem 0 1rem;
    padding: 0 1rem;
    background: #f85f48;
    border-radius: 2rem;
    line-height: 2rem;
    font-size: .75rem;
    color: #fff;
}

.icon-pencil {
    display: inline-block;
    vertical-align: middle;
    width: .72rem;
    height: .72rem;
    margin-right: .2rem;
    background: url('/images/icon-pencil.png') no-repeat;
    background-size: 100% auto;
}

.switch-btn{
    display: inline-block;
    margin: 0 1.8rem;
    padding-bottom: .55rem;
    font-size: .75rem;
    color: #999;
    padding-top: .375rem;
}

.switch-current {
    color: #3f3f3f;
    border-bottom: 3px solid #3f3f3f;
}

.rewards {
    margin-bottom: 4rem;
}

.a-reward {
    overflow: hidden;
    background: #fff;
    margin-bottom: .5rem;
    padding: .75rem;
    padding-bottom: 0;
}

.reward-header {
    overflow: hidden;
    margin-bottom: .45rem;
}

.user {
    float: left;
}

.user-avatar {
    display: inline-block;
    vertical-align: middle;
    height: 1.25rem;
    width: 1.25rem;
    border-radius: 50%;
}
.user-nickname {
    display: inline-block;
    vertical-align: middle;
    font-size: .65rem;
    color: #999;
    margin-left: .3rem;
    max-width: 12rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.offer{
    display: inline-block;
    vertical-align: middle;
    font-size: .8rem;
    color: #f85f48;
    height: 1.25rem;
    line-height: 1.25rem;
    float: right;
}

.reward-body {
    font-size: .8rem;
    color: #3f3f3f;
    line-height: 1.1rem;
    margin-bottom: .4rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.reward-footer {
    overflow: hidden;
    padding-bottom: .75rem;
}

.status {
    float: left;
    color: #999;
    font-size: .65rem;
    line-height: 1.15rem;
    height: 1.15rem;
}

.answers {
    margin-left: .5rem;
}


